<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/whiteDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="zvonilka_button">
        <item name="android:shape">rectangle</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="Zvonilka">
        <item name="android:buttonStyle">@style/zvonilka_button</item>
    </style>

</resources>
